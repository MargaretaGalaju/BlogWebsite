<%- include('partials/header') %>

<h1>Compose</h1>
<form action="/" method="post">
  <div class="container">
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" class="form-control" name="title" placeholder="Write here">
    </div>
    <div class="form-group">
      <label for="post">Post:</label>
      <textarea type="text" class="form-control" name="body" placeholder="Write here" rows="7"></textarea>
    </div>

      <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </div>


</form>


